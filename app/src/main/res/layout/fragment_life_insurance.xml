<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:background="@color/blue_gray"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="@string/product_title_life_insurance"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/product_description_life_insurance"
                android:textColor="@color/gray"
                android:textSize="12dp" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/pension_fund" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ПЕНСИОННЫЙ ФОНД"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Накопления денежных средств для достойной жизни на пенсии"
                    android:textColor="@color/gray" />


                <Button
                    android:id="@+id/buttonIssue"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView2"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView2"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/heir" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="НАСЛЕДНИК"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView12"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Целевое накопление денежных средств к какой либо дате в жизни ребенка"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/buttonIssue2"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView22"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails2"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView22"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue2"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/investor" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ИНВЕСТОР"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView13"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Максимальное накопление денежных средств и одновременная страховая защита на случай непредвиденных ситуаций."
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/buttonIssue3"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView23"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails3"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView23"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue3"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/protection" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="НАДЕЖНАЯ ЗАЩИТА"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView14"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Продукта: комплексное целевое накопление денежных средств и одновременная материальная защита на случай непредвиденных ситуаций."
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/buttonIssue4"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView24"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails4"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView24"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue4"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form_bg"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/StepText"
                    android:text="ЗАПОЛНИТЕ ФОРМУ ДЛЯ ПОЛУЧЕНИЯ КРЕДИТА" />

                <include layout="@layout/form_life" />

            </LinearLayout>

            <include layout="@layout/triangle_brown_in" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ОПТИМАЛЬНЫЙ РЕЗУЛЬТАТ"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView

                            android:text="Страховой полис"
                            android:layout_span="2"
                            android:textColor="@color/gray"/>
                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="350dp"
                            android:text="120 000 грн."
                            android:textColor="@color/gray"/>

                        <Button
                            style="@style/ButtonGray"
                            android:text="Оформить" />

                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                </TableLayout>


            </LinearLayout>


            <include layout="@layout/triangle_brown_out" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form_bg"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="ШАГ 2"
                    android:textSize="16sp" />

                <include layout="@layout/form_personal" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>