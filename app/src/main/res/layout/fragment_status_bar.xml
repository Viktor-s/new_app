<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_get_push"
        android:id="@+id/status_bar_push_imageView"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/app_name"
        tools:visibility="visible"
        android:visibility="gone" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        tools:src="@drawable/wifi_3"
        android:id="@+id/status_bar_wifi_imageView"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="98%"
        android:background="@drawable/battery"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/status_bar_accum_textView"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="19:45"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/status_bar_clock_textView" />
</LinearLayout>
