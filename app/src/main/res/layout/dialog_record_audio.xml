<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="250dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/micImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@android:drawable/presence_audio_online"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_below="@+id/micImage"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/dialog_audio_record_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1"
        android:layout_alignEnd="@+id/linear1">

        <Button
            android:id="@+id/dialog_audio_play_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="play"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="OK"
        android:id="@+id/dialog_audio_confirm_button"
        android:layout_below="@+id/linear2"
        android:layout_alignStart="@+id/linear2" />

</RelativeLayout>