<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_group_product"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/group_product_photo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base110dp720sw"
        android:src="@drawable/risk_insurance"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/group_product_title"
        style="@style/ProductTitle"
        android:text="@string/product_title_credit_without_bail" />

    <TextView
        android:id="@+id/group_product_description"
        style="@style/ProductDescription"
        android:layout_below="@+id/group_product_photo"
        tools:text="@string/product_description_credit_without_bail"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>