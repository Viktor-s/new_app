<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/base20dp720sw"
    android:background="@color/form_bg">

    <TextView
        android:id="@+id/textTitleDialogTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Set start time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#D5D9DE"
        android:textSize="@dimen/base16sp720sw" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textTitleDialogTime"
        android:layout_alignStart="@+id/textTitleDialogTime"
        android:layout_below="@+id/textTitleDialogTime"
        android:layout_marginTop="@dimen/base6dp720sw"
        android:background="#0186D5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/base10dp720sw"
        android:layout_marginRight="@dimen/base10dp720sw"
        android:layout_marginBottom="@dimen/base6dp720sw">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <NumberPicker
                android:id="@+id/numberPickerHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="hours"
                android:textColor="@android:color/white"
                android:textSize="@dimen/base14sp720sw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <NumberPicker
                android:id="@+id/numberPickerMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="mins"
                android:textColor="@android:color/white"
                android:textSize="@dimen/base14sp720sw" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/buttonDialogCalendarTimeOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base45dp720sw"
        android:layout_marginStart="@dimen/base50dp720sw"
        android:layout_marginEnd="@dimen/base50dp720sw"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_pink_bg"
        android:text="Установить время"
        android:textColor="@android:color/white"
        android:textSize="@dimen/base17sp720sw"
        android:layout_marginLeft="@dimen/base100dp720sw"
        android:layout_marginRight="@dimen/base100dp720sw"
        android:layout_marginBottom="@dimen/base20dp720sw" />

</RelativeLayout>