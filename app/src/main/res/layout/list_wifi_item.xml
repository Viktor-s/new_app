<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:background="@drawable/user_fragment_block_gradient">

    <ImageView
        android:layout_width="19dp"
        android:layout_height="14dp"
        android:id="@+id/connected"
        android:layout_marginStart="20dp"
        tools:src="@drawable/wifi_selected"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_string"
        android:id="@+id/wifi_name"
        android:layout_marginStart="13dp"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/network_protected"
        tools:background="@drawable/wifi_lock"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:id="@+id/wifi_strength"
        tools:background="@drawable/wifi_4"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/app_name" />

</LinearLayout>
