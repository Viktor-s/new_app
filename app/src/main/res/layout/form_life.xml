<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/form_bg">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="6"
        android:orientation="horizontal">

        <TextView
            style="@style/FormTextView46"
            android:text="программа" />

        <EditText style="@style/FormEditText46" />

        <TextView
            android:layout_column="0"
            style="@style/FormTextView26"
            android:text="пол" />

        <TextView
            style="@style/FormTextView26"
            android:text="возраст" />

        <TextView
            style="@style/FormTextView26"
            android:text="срок договора" />

        <EditText style="@style/FormEditText26" />

        <EditText style="@style/FormEditText26" />

        <EditText style="@style/FormEditText26" />

        <TextView
            style="@style/FormTextView46"
            android:text="периодичность платежей" />

        <TextView
            style="@style/FormTextView26"
            android:text="платеж" />

        <EditText style="@style/FormEditText46" />

        <EditText
            style="@style/FormEditText26" />

        <TextView
            android:layout_column="0"
            style="@style/FormTextView26"
            android:text="сумма" />

        <EditText
            android:layout_column="0"
            style="@style/FormEditText26" />


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="ДОПОЛНИТЕЛЬНЫЕ РИСКИ"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_gr0"
            android:layout_width="250dp"
            android:layout_height="wrap_content" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ИНВАЛИДНОСТЬ 1 ИЛИ 2 ГРУППЫ, НЕ ЗАВИСИМО ОТ" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="КРИТИЧЕСКИЕ ЗАБОЛЕВАНИЯ" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОСВОБОЖДЕНИЕ ОТ УПЛАТЫ ВЗНОСОВ (ИНВАЛИДНОСТЬ 1-2 ГРУППЫ)" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОСВОБОЖДЕНИЕ ОТ УПЛАТЫ ВЗНОСОВ (ИНВАЛИДНОСТЬ 1 ГРУППЫ)" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radio_gr1"
            android:layout_width="250dp"
            android:layout_height="wrap_content" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ТРАВМАТИЧЕСКОЕ ПОВРЕЖДЕНИЕ В РЕЗУЛЬТАТЕ ЧС" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ТРАВМАТИЧЕСКОЕ ПОВРЕЖДЕНИЕ В РЕЗУЛЬТАТЕ ЧС" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="СТОЙКАЯ УТРАТА РАБОТОСПОСОБНОСТИ В РЕЗУЛЬТАТЕ ЧС" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="СМЕРТЬ В РЕЗУЛЬТАТЕ ЧС" />

        </RadioGroup>

    </GridLayout>

    <Button
        style="@style/ButtonPink"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:layout_marginLeft="240dp"
        android:text="Посчитать" />

</LinearLayout>