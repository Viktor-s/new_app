<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:background="@color/blue_gray"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="@string/product_title_credit_bail"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/product_description_credit_bail"
                android:textColor="@color/gray"
                android:textSize="12dp" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/auto" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="АВТОТРАНСПОРТ"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Документы: Паспорт + ИНН, Свидетелство о регистрации автомобиля, генеральная доверенность при отустсвии собственника. Транспортное средство."
                    android:textColor="@color/gray" />


                <Button
                    android:id="@+id/buttonIssue"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView2"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView2"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/immovables" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="НЕВДИЖИМОСТЬ"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView12"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Документы: Паспорт, ИНН, правоустанавливающие документы, технический паспорт, форма №3. Предмет залога"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/buttonIssue2"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView22"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails2"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView22"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue2"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/gold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ЗОЛОТО"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView13"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Документы: Паспорт или любой документ с фото, ИНН. Предмет залога"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/buttonIssue3"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView23"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails3"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView23"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue3"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/product_item_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/tv" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="БЫТОВАЯ ТЕХНИКА"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView14"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="Документы: Паспорт или любой документ с фото, ИНН Предмет залога"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/buttonIssue4"
                    style="@style/ButtonPink"
                    android:layout_below="@id/textView24"
                    android:layout_marginLeft="@dimen/base250dp720sw"
                    android:text="ОФОРМИТ" />

                <Button
                    android:id="@+id/buttonDetails4"
                    style="@style/ButtonGray"
                    android:layout_below="@id/textView24"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/buttonIssue4"
                    android:text="ПОДРОБНЕЕ" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form_bg"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    style="@style/StepText"
                    android:text="ЗАПОЛНИТЕ ФОРМУ ДЛЯ ПОЛУЧЕНИЯ КРЕДИТА" />

                <include layout="@layout/form_credit" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form_bg"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <include layout="@layout/form_personal" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>