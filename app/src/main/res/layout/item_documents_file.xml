<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/file_browser_item_end_margin"
        android:src="@drawable/file"
        android:contentDescription="@string/app_name"
        android:id="@+id/file_image_imageView" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="@dimen/file_browser_item_end_margin"
        tools:text="My document.doc"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:id="@+id/file_name_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/file_browser_item_end_margin"
        tools:text="32Kb"
        android:textColor="@color/gray"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/file_size_textView" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_file_action"
        android:id="@+id/file_action_button"
        android:contentDescription="@string/app_name" />
</TableRow>
