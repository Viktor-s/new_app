<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explorer_file_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/base10dp720sw"
    android:paddingEnd="@dimen/base10dp720sw"
    android:paddingTop="@dimen/base15dp720sw"
    android:paddingBottom="@dimen/base15dp720sw"
    tools:ignore="ContentDescription">

    <ImageView
        android:src="@drawable/ic_file_star_gray"
        android:id="@+id/file_star_imageView"
        style="@style/DocumentsItemLeftIconStyle" />

    <ImageView
        android:src="@drawable/ic_file_doc"
        android:id="@+id/file_image_imageView"
        style="@style/DocumentsItemRightIconStyle" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="@dimen/base15dp720sw"
        tools:text="My document.doc"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:id="@+id/file_name_textView" />

    <TextView
        tools:text="32Kb"
        android:id="@+id/file_size_textView"
        style="@style/DocumentsItemTextStyle" />

    <TextView
        tools:text="23 февраля 2015, 11:05"
        android:id="@+id/file_date_textView"
        style="@style/DocumentsItemTextStyle" />

    <ImageView
        android:src="@drawable/ic_file_action"
        android:id="@+id/file_action_button"
        style="@style/DocumentsItemRightIconStyle" />

    <ImageView
        android:src="@drawable/ic_file_tab"
        android:id="@+id/file_tablet_imageView"
        style="@style/DocumentsItemRightIconStyle" />

    <ImageView
        android:src="@drawable/ic_file_cloud_gray"
        android:id="@+id/file_cloud_imageView"
        style="@style/DocumentsItemBaseStyle" />
</TableRow>
