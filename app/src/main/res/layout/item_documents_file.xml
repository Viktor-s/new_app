<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explorer_file_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/base10dp720sw"
    android:paddingEnd="@dimen/base10dp720sw"
    android:paddingTop="@dimen/base15dp720sw"
    android:paddingBottom="@dimen/base15dp720sw">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base15dp720sw"
        android:src="@drawable/file"
        android:contentDescription="@string/app_name"
        android:id="@+id/file_image_imageView" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="@dimen/base15dp720sw"
        tools:text="My document.doc"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:id="@+id/file_name_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base16sp720sw"
        android:layout_marginEnd="@dimen/base15dp720sw"
        tools:text="32Kb"
        android:textColor="@color/gray"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/file_size_textView" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_file_action"
        android:id="@+id/file_action_button"
        android:contentDescription="@string/app_name" />
</TableRow>
