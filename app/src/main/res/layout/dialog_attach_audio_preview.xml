<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mail_messages_dialog_width"
    android:layout_height="@dimen/mail_messages_dialog_height"
    tools:context=".MainActivity">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_audio_preview_seekBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:indeterminate="false"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_audio_preview_current_position_textView"
        android:layout_below="@+id/dialog_audio_preview_seekBar"
        android:layout_alignStart="@+id/dialog_audio_preview_seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_audio_preview_total_duration_textView"
        android:layout_below="@+id/dialog_audio_preview_seekBar"
        android:layout_alignEnd="@+id/dialog_audio_preview_seekBar" />

</RelativeLayout>