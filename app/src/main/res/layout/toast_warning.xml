<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/warning_toast_layout_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/base10dp720sw"
    android:background="@color/light_gray">

    <ImageView
        android:src="@drawable/ic_warning_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base10dp720sw"
        android:contentDescription="@string/dummy_string" />

    <TextView
        android:id="@+id/toast_text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/base18sp720sw"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Parameter google_push_id is missing" />
</LinearLayout>
