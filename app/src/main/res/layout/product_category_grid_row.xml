<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_row_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base240dp720sw"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/grid_row_name_extView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_row_imageView"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/base26sp720sw"
        android:layout_marginTop="-4dp" />

    <TextView
        android:id="@+id/grid_row_description_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_row_name_extView"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:textColor="@color/black"
        android:textSize="@dimen/base20sp720sw" />

    <TextView
        android:id="@+id/grid_hide_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="New Text"
        android:visibility="invisible" />
</LinearLayout>