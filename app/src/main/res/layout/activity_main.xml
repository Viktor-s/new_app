<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background">

    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/left_main_menu"
        android:layout_toEndOf="@+id/left_main_menu"
        android:orientation="horizontal">

        <fragment
            android:name="me.justup.upme.fragments.FastPayingFragment"
            android:id="@+id/fastPayingFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            tools:layout="@layout/fragment_fast_paying" />

        <!-- <View
            android:background="@drawable/left_shadow"
            android:layout_width="10dp"
            android:layout_height="wrap_content" /> -->

        <fragment
            android:name="me.justup.upme.fragments.UserFragment"
            android:id="@+id/mapAndUserFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            tools:layout="@layout/fragment_user" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/left_main_menu"
        android:layout_toEndOf="@+id/left_main_menu"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/left_main_menu"
        android:orientation="vertical"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include_corner">

        <LinearLayout
            style="@style/MenuItemLayout"
            android:id="@+id/news_menu_item">

            <ImageView
                style="@style/MenuItemImageView"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/MenuItemTextView"
                android:text="@string/menu_item_title_news" />
        </LinearLayout>

        <LinearLayout
            style="@style/MenuItemLayout"
            android:id="@+id/mail_menu_item">

            <ImageView
                style="@style/MenuItemImageView"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/MenuItemTextView"
                android:text="@string/menu_item_title_mail" />
        </LinearLayout>

        <LinearLayout
            style="@style/MenuItemLayout"
            android:id="@+id/calendar_menu_item">

            <ImageView
                style="@style/MenuItemImageView"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/MenuItemTextView"
                android:text="@string/menu_item_title_calendar" />
        </LinearLayout>

        <LinearLayout
            style="@style/MenuItemLayout"
            android:id="@+id/products_menu_item">

            <ImageView
                style="@style/MenuItemImageView"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/MenuItemTextView"
                android:text="@string/menu_item_title_products" />
        </LinearLayout>

        <LinearLayout
            style="@style/MenuItemLayout"
            android:id="@+id/briefcase_menu_item">

            <ImageView
                style="@style/MenuItemImageView"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/MenuItemTextView"
                android:text="@string/menu_item_title_briefcase" />
        </LinearLayout>

        <TextView
            android:id="@+id/exit_menu_item"
            style="@style/MenuItemTextView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Выход" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/settings_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        layout="@layout/upme_corner"
        android:id="@+id/include_corner" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gear"
        android:id="@+id/settings_button"
        android:layout_above="@+id/left_main_menu"
        android:layout_alignParentStart="true" />

</RelativeLayout>
