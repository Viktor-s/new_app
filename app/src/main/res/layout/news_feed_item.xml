<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="@dimen/news_divider_height"
    android:id="@+id/news_feed_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/news_fragment_block_size"
        android:layout_height="@dimen/news_fragment_block_size"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/news_divider_height"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/news_date_textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/news_fragment_title_margin_left_right_top"
            android:layout_marginLeft="@dimen/news_fragment_title_margin_left_right_top"
            android:layout_marginRight="@dimen/news_fragment_title_margin_left_right_top"
            android:background="#C85694"
            android:autoText="true"
            android:textSize="@dimen/news_fragment_date_text_size"
            android:gravity="center"
            android:padding="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/news_title_textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/news_fragment_text_margin_top"
            android:layout_marginLeft="@dimen/news_fragment_title_margin_left_right_top"
            android:layout_marginRight="@dimen/news_fragment_title_margin_left_right_top"
            android:textSize="@dimen/news_fragment_title_text_size"
            android:textColor="#414976"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/news_text_textView"
            android:layout_marginTop="@dimen/news_fragment_text_margin_top"
            android:layout_marginLeft="@dimen/news_fragment_title_margin_left_right_top"
            android:layout_marginRight="@dimen/news_fragment_title_margin_left_right_top"
            android:textSize="@dimen/news_fragment_main_text_size"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/news_fragment_block_size"
        android:layout_height="@dimen/news_fragment_block_size"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="@dimen/news_fragment_block_size"
            android:layout_height="wrap_content"
            android:id="@+id/news_image_imageView"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/news_fragment_block_size"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_marginLeft="@dimen/news_fragment_text_margin_top"
        android:layout_alignParentBottom="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_comments_title"
                android:id="@+id/comments_title_textView"
                android:layout_gravity="start|top"
                android:textSize="@dimen/news_fragment_title_text_size"
                android:textColor="#848180"
                android:layout_marginBottom="@dimen/news_fragment_text_margin_top"
                android:textAllCaps="true"
                android:gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/comments_length_textView"
                android:textSize="@dimen/news_fragment_title_text_size"
                android:textColor="#C85694" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AAAAAA" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments_listView"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/imageView"
        android:layout_marginLeft="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="22dp" />

</RelativeLayout>