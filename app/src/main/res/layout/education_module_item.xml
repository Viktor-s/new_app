<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/youtube_button_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/education_module_item_image_view"
        android:layout_width="@dimen/base35dp720sw"
        android:layout_height="@dimen/base35dp720sw"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/base3dp720sw"
        android:contentDescription="@string/dummy_string"
        tools:src="@drawable/ic_launcher_wallpaper" />

    <TextView
        android:id="@+id/education_module_item_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/education_module_item_image_view"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="@dimen/base16sp720sw"
        tools:text="Книга 1. Введение\nв экономическую теорию" />

    <TextView
        android:id="@+id/education_module_item_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/education_module_item_main_text"
        android:layout_marginTop="@dimen/base3dp720sw"
        android:layout_toEndOf="@+id/education_module_item_image_view"
        android:ellipsize="end"
        android:lines="4"
        android:maxLines="4"
        android:textColor="@android:color/black"
        tools:text="Самая известная экономическая модель и ее применение. Закон спроса. Эластичность спроса по цене и другие виды эластичностей." />

    <TextView
        android:id="@+id/education_module_item_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/education_module_item_description_text"
        android:layout_centerHorizontal="true"
        tools:text="New Text" />

    <TextView
        android:id="@+id/education_module_item_content_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/education_module_item_description_text"
        android:layout_centerHorizontal="true"
        tools:text="New Text" />

    <TextView
        android:id="@+id/education_module_item_link"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/education_module_item_description_text"
        android:layout_centerHorizontal="true"
        tools:text="New Text" />
</RelativeLayout>
