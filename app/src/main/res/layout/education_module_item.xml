<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/youtube_button_container"
    android:layout_width="@dimen/base300dp720sw"
    android:layout_height="@dimen/base160dp720sw"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/education_module_item_image_view"
        android:layout_width="@dimen/base60dp720sw"
        android:layout_height="@dimen/base50dp720sw"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/base6dp720sw" />

    <TextView
        android:id="@+id/education_module_item_main_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/education_module_item_image_view"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/base18sp720sw"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/education_module_item_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/education_module_item_main_type"
        android:layout_marginTop="@dimen/base3dp720sw"
        android:layout_toEndOf="@+id/education_module_item_image_view"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:text="Видео. Трейлер Star Wars Видео. Трейлер Star Wars Видео. Трейлер Star Wars"
        android:textColor="@color/black"
        android:textSize="@dimen/base18sp720sw"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/education_module_item_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/education_module_item_main_text"
        android:layout_marginTop="@dimen/base3dp720sw"
        android:layout_toEndOf="@+id/education_module_item_image_view"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textColor="@android:color/black"
        android:textSize="@dimen/base16sp720sw"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/education_module_item_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/education_module_item_description_text"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

    <TextView
        android:id="@+id/education_module_item_content_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/education_module_item_description_text"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

    <TextView
        android:id="@+id/education_module_item_link"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/education_module_item_description_text"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

</RelativeLayout>