<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:background="@color/blue_gray"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="@string/product_title_credit_risk_insurance"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/product_description_credit_risk_insurance"
                android:textColor="@color/gray"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="НАЙБОЛЕЕ ПОДХОДЯЩИЙ РЕЗУЛЬТАТ"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView

                            android:text="ПЛАТЕЖ В ГОД"
                            android:layout_span="2"
                            android:textColor="@color/gray"/>
                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="350dp"
                            android:text="120 000 грн."
                            android:textColor="@color/gray"/>

                        <Button
                            style="@style/ButtonGray"
                            android:text="Оформить" />

                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                </TableLayout>


            </LinearLayout>


            <include layout="@layout/triangle_brown_out" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form_bg"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <include layout="@layout/form_personal" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>