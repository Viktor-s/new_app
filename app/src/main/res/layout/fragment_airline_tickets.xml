<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="@dimen/base30dp720sw">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base150dp720sw"
                android:layout_marginTop="@dimen/base40dp720sw"
                android:background="@color/blue_gray"
                android:gravity="center_vertical"
                android:padding="@dimen/base20dp720sw"
                android:text="@string/product_title_credit_risk_insurance"
                android:textAllCaps="true"
                android:textSize="@dimen/base23sp720sw" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base20dp720sw"
                android:layout_marginTop="@dimen/base20dp720sw"
                android:text="@string/product_description_credit_risk_insurance"
                android:textColor="@color/gray"
                android:textSize="@dimen/base12sp720sw" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/base30dp720sw"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="НАЙБОЛЕЕ ПОДХОДЯЩИЙ РЕЗУЛЬТАТ"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base100dp720sw"
                    android:layout_marginRight="@dimen/base100dp720sw">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView

                            android:text="ПЛАТЕЖ В ГОД"
                            android:layout_span="2"
                            android:textColor="@color/gray"/>
                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/base10dp720sw"
                        android:layout_marginBottom="@dimen/base10dp720sw"
                        android:background="@color/gray"/>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/base350dp720sw"
                            android:text="120 000 грн."
                            android:textColor="@color/gray"/>

                        <Button
                            style="@style/ButtonGray"
                            android:text="Оформить" />

                    </TableRow>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/base10dp720sw"
                        android:layout_marginBottom="@dimen/base10dp720sw"
                        android:background="@color/gray"/>

                </TableLayout>


            </LinearLayout>


            <include layout="@layout/triangle_brown_out" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/form_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/base20dp720sw">

                <include layout="@layout/form_personal" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>