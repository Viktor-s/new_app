<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/base_background"
        android:visibility="visible">

        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            style="@style/PinCodeButton"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            style="@style/PinCodeButton"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            style="@style/PinCodeButton"
            android:text="3" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="4"
            android:id="@+id/button4" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="5"
            android:id="@+id/button5" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="6"
            android:id="@+id/button6" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="7"
            android:id="@+id/button7" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="8"
            android:id="@+id/button8" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="9"
            android:id="@+id/button9" />

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:text="@string/picode_button_del"
            android:id="@+id/button_clear" />

        <TextView
            android:id="@+id/number_textView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text=""
            tools:text="2530"
            android:layout_margin="@dimen/pincode_button_margin"
            android:textSize="@dimen/pincode_button_text_size"
            android:gravity="center"
            android:background="@color/login_phone_number_background"/>

        <Button
            style="@style/PinCodeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/unlock"
            android:id="@+id/button_unlock" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/last_product"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/pay_panel_button"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/container_product_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1">


        </RelativeLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/check_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_selector"
                    android:checked="false" />

            </RelativeLayout>

            <TextView
                android:id="@+id/next_product"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/pay_panel_button"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>