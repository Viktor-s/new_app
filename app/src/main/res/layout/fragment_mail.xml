<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/app_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/mail_contacts_list_width"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/search_icon_test"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/mail_search_block_height"
                android:id="@+id/editText2"
                android:background="@color/white" />
        </LinearLayout>

        <ListView
            android:id="@+id/mail_contacts_ListView"
            android:layout_width="@dimen/mail_contacts_list_width"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mail_messages_container_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/mail_contacts_list_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white" />
</RelativeLayout>
