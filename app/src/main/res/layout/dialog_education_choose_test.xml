<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base350dp720sw"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Выберите тест"
        android:textColor="@android:color/black"
        android:textSize="@dimen/base20sp720sw"
        android:textStyle="bold"
        android:layout_margin="@dimen/base20sp720sw"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/base190dp720sw"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dia"
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_education_test_linear_layout"
        android:layout_marginBottom="@dimen/base25dp720sw">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" />
    </LinearLayout>


</RelativeLayout>