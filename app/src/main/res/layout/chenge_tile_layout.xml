<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/user_fragment_block_border"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            style="@style/NewUserTextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base12dp720sw"
            android:text="Редактор виджета"
            android:textSize="@dimen/base25sp720sw" />

        <View
            style="@style/SeparationLine"
            android:layout_marginTop="0dp" />

        <TextView
            style="@style/NewUserTextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base12dp720sw"
            android:text="Введите новое имя" />

        <EditText
            android:id="@+id/edt_tile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="Введите новое имя" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_save"
                style="@style/ButtonPink"
                android:layout_margin="15dp"
                android:layout_marginBottom="@dimen/base20dp720sw"
                android:layout_weight="1"
                android:text="Принять"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/ButtonPink"
                android:layout_margin="15dp"
                android:layout_marginBottom="@dimen/base20dp720sw"
                android:layout_weight="1"
                android:text="Отменить"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>