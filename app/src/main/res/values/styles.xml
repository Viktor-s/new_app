<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PinCodeButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/pincode_button_margin</item>
        <item name="android:onClick">onPinCodeButtonClickHandler</item>
        <item name="android:textSize">@dimen/pincode_button_text_size</item>
        <item name="android:background">@drawable/digit_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProductMainTitle" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/product_title</item>
    </style>

    <style name="ProductTitle" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/product_title_text_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ProductDescription" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/product_title_text_margin</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/product_description</item>
    </style>

    <!-- FORM -->
    <style name="FormTextView16" parent="android:style/Widget.TextView">
        <item name="android:layout_width">@dimen/form_tv_width_16</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FormTextView26" parent="android:style/Widget.TextView">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/form_tv_width_26</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FormTextView36" parent="android:style/Widget.TextView">
        <item name="android:layout_columnSpan">3</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/form_tv_width_36</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FormTextView46" parent="android:style/Widget.TextView">
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/form_tv_width_46</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FormEditText16" parent="android:style/Widget.EditText">
        <item name="android:layout_width">@dimen/form_tv_width_16</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="FormEditText26" parent="android:style/Widget.EditText">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/form_tv_width_26</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="FormEditText36" parent="android:style/Widget.EditText">
        <item name="android:layout_columnSpan">3</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/form_tv_width_36</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="FormEditText46" parent="android:style/Widget.EditText">
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/form_tv_width_46</item>
        <item name="android:layout_margin">@dimen/form_tv_margin</item>
        <item name="android:textSize">@dimen/form_tv_text_size</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="ButtonPink" parent="android:style/Widget.Button">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_pink_bg</item>
    </style>

    <style name="ButtonGray" parent="android:style/Widget.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_gray_bg</item>
    </style>

    <style name="StepText" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PayPanelInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/pay_panel_text_size</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PayPanelInfoTextHide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/pay_panel_text_size</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="PayPanelField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/pay_panel_rounded_edittext</item>
    </style>

    <style name="PayPanelTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_launcher</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="PayPanelTitleDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@color/login_phone_number_background</item>
    </style>

    <style name="PayPanelButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/pay_panel_button_selector</item>
        <item name="android:text">@string/send</item>
    </style>

    <style name="PayPanelSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UserFragmentBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/user_fragment_left_margin</item>
        <item name="android:paddingRight">@dimen/user_fragment_left_margin</item>
        <item name="android:paddingTop">@dimen/user_fragment_block_padding</item>
        <item name="android:paddingBottom">@dimen/user_fragment_block_padding</item>
        <item name="android:background">@drawable/user_fragment_block_gradient</item>
    </style>

    <style name="UserFragmentInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/user_fragment_info_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginEnterLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LoginInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainMenuItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@drawable/ic_launcher</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/main_menu_selector</item>
    </style>

    <style name="PayFragmentButtonStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/ic_launcher</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/digit_button_selector</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
