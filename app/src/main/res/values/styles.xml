<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PinCodeButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/pincode_button_margin</item>
        <item name="android:onClick">onPinCodeButtonClickHandler</item>
        <item name="android:textSize">@dimen/pincode_button_text_size</item>
    </style>

    <style name="ProductTitile" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/product_title</item>
    </style>

    <style name="ProductDescription" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/product_description</item>
    </style>

    <style name="MenuItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:onClick">onMainMenuClickHandler</item>
    </style>

    <style name="MenuItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MenuItemTextView" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
