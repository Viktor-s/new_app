<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PinCodeButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/pincode_button_margin</item>
        <item name="android:onClick">onPinCodeButtonClickHandler</item>
        <item name="android:textSize">@dimen/pincode_button_text_size</item>
        <item name="android:background">@drawable/digit_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProductMainTitle" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/product_title</item>
    </style>

    <style name="ProductTitle" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/product_title_text_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ProductDescription" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/product_title_text_margin</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/product_description</item>
    </style>

    <style name="MenuItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:onClick">onMainMenuClickHandler</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/main_menu_selector</item>
    </style>

    <style name="MenuItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MenuItemTextView" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PayButtonStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/digit_button_selector</item>
    </style>

    <style name="PayButtonIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PayButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PayPanelInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PayPanelField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/pay_panel_rounded_edittext</item>
    </style>

    <style name="PayPanelTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:drawableLeft">@drawable/ic_launcher</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

</resources>
